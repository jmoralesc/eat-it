= form_for @recipe, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :photo, :class => 'control-label'
    .controls
      = f.text_field :photo, :class => 'text_field'
  .control-group
    = f.label :preparation, :class => 'control-label'
    .controls
      = f.text_field :preparation, :class => 'text_field'
  .control-group
    = f.label :price, :class => 'control-label'
    .controls
      = f.text_field :price, :class => 'text_field'
  .control-group
    = f.label :note, :class => 'control-label'
    .controls
      = f.text_field :note, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), recipes_path, :class => 'btn'
